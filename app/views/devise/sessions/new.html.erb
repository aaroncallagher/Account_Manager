<div class="block-center mt-xl wd-xl authform" style="padding-top: 10%;">
   <!-- START panel-->
   <div class="panel panel-dark panel-flat">
      <div class="panel-heading text-center">
         <%= link_to root_path do %>
            <img src="<%= image_path('angle/logo.png') %>" alt="CAD Masters, Inc." class="block-center img-rounded" />
         <% end %>
      </div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <div class="panel-body">
         <p class="text-center pv">Sign in to Your CAD Masters Account</p>
         <%= devise_error_messages! %>
         <form role="form" data-parsley-validate="" novalidate="" class="mb-lg">
            <div class="form-group">
               <%= f.email_field :email, :autofocus => true, class: 'form-control', id: 'exampleInputEmail1', placeholder: 'Enter email' do %>
                  <span class="fa fa-envelope form-control-feedback text-muted"></span>
               <% end %>
            </div>
            <div class="form-group has-feedback">
               <%= f.password_field :password, class: 'form-control', id: 'exampleInputPassword1', placeholder: 'Password' %>
               <span class="fa fa-lock form-control-feedback text-muted"></span>
            </div>
            <div class="clearfix">
               <div class="checkbox c-checkbox pull-left mt0">
                  <label>
                     <input type="checkbox" value="" name="remember" />
                     <span class="fa fa-check"></span>Remember Me</label>
               </div>
               <div class="pull-right"><%- if devise_mapping.recoverable? %>
        <%= link_to "Forgot password?", new_password_path(resource_name), class: 'text-muted' %>
      <% end -%></a> 
               </div>
            </div>
            <!--<button type="submit" class="btn btn-block btn-primary mt-lg">Login</button>--><%= f.submit 'Login', :class => 'btn btn-block btn-primary mt-lg' %>
         </form>
         <p class="pt-lg text-center">Need to Signup?</p>
         <%- if devise_mapping.registerable? %>
           <%= link_to 'Register Now', new_registration_path(resource_name), class: 'btn btn-block btn-default'  %>
         <% end %>
      </div>
   </div>
   <% end %>
   <!-- END panel-->
</div>

